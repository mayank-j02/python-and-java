import java.util.Scanner;

public class inputrows {
    public static void main(String[] args){
       Scanner value = new Scanner(System.in);
       System.out.print("Enter the number of rows: ");
       int num = value.nextInt();
       int i = 0; int j = 0;
       for(i=0; i<=num;i++ )
       {
           for(j=0; j<=i; j++){
               System.out.print("*");
           }
           System.out.println();
       }
    }
}
