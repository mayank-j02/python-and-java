import java.util.Scanner;
public class palindrome {
    public static void main(String[] args){
        Scanner pal = new Scanner(System.in);
        System.out.print("Enter the String/number: ");
        String s1 = pal.nextLine();
        String reverse ="";
        String s2 = s1.toLowerCase();
        int i1 = s1.length();
        int i = 0;
        for(i = i1 -1; i>=0; i--){
        reverse = reverse + s2.charAt(i);
        }
        if(s2.equals(reverse)){
        System.out.print("the entered string/number is a palindrome.");
        }
        else{
        System.out.println("the entered string/number is not a palindrome.");
        }

    }
}
